<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define the menu item for the csv import -->
        <menuitem id="csv_import_menu" name="CSV Import" sequence="10" action="csv_import_action"/>
        

        <!-- Define the action for the csv import -->
        <record id="csv_import_action" model="ir.actions.act_window">
            <field name="name">CSV Import</field>
            <field name="res_model">csv.import</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Define the tree view for the csv import -->
        <record id="csv_import_tree_view" model="ir.ui.view">
            <field name="name">csv.import.tree</field>
            <field name="model">csv.import</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="csv_filename"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Define the form view for the csv import -->
        <record id="csv_import_form_view" model="ir.ui.view">
            <field name="name">csv.import.form</field>
            <field name="model">csv.import</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="csv_file" filename="csv_filename"/>
                            <field name="csv_filename" invisible="1"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
