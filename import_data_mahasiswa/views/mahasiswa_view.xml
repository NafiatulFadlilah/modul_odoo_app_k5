        <!-- definisikan record baru di ir.actions.server untuk menambahkan tombol khusus untuk add_csv di view tree atau view form yang sudah ada -->
        <record id="ir_actions_mahasiswa_add_csv" model="ir.actions.server">
            <field name="name">Tambah Data Mahasiswa dari CSV</field>
            <field name="model_id" ref="model_mahasiswa_data"/>
            <field name="state">code</field>
            <field name="code">action = model.action_mahasiswa_add_csv()</field>
            <field name="binding_model_id" ref="model_mahasiswa_data"/>
            <field name="binding_type">action</field>
        </record>
        <record id="ir_actions_mahasiswa_read_csv" model="ir.actions.server">
            <field name="name">Baca Data Mahasiswa dari CSV</field>
            <field name="model_id" ref="model_mahasiswa_data"/>
            <field name="state">code</field>
            <field name="code">action = model.action_mahasiswa_read_csv()</field>
            <field name="binding_model_id" ref="model_mahasiswa_data"/>
            <field name="binding_type">action</field>
        </record>

        <!-- definisikan menu untuk mengakses action -->
        <menuitem id="menu_mahasiswa" name="Data Mahasiswa" action="action_mahasiswa"/>
        <menuitem id="menu_mahasiswa_add" name="Add Mahasiswa" action="action_mahasiswa_add_csv" parent="menu_mahasiswa"/>
        <menuitem id="menu_read_csv" name="Read CSV Mahasiswa" action="action_mahasiswa_read_csv" parent="menu_mahasiswa"/>
    </data>
</odoo>
