<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- definisikan data yang akan dimuat oleh modul -->
    <data>
        <!-- definisikan view tree untuk menampilkan data mahasiswa dalam bentuk tabel -->
        <record id="view_mahasiswa_tree" model="ir.ui.view">
            <field name="name">mahasiswa.data.tree</field>
            <field name="model">mahasiswa.data</field>
            <field name="arch" type="xml">
                <tree string="Data Mahasiswa">
                    <field name="nim"/>
                    <field name="nama"/>
                    <field name="kelas"/>
                    <field name="semester"/>
                    <field name="ipk"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>
        <!-- definisikan view form untuk menampilkan dan mengedit data mahasiswa dalam bentuk form -->
        <record id="view_mahasiswa_form" model="ir.ui.view">
            <field name="name">mahasiswa.data.form</field>
            <field name="model">mahasiswa.data</field>
            <field name="arch" type="xml">
                <form string="Data Mahasiswa">
                    <sheet>
                        <group>
                            <field name="nim"/>
                            <field name="nama"/>
                            <field name="kelas"/>
                            <field name="semester"/>
                            <field name="ipk"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- definisikan view form baru untuk menampilkan field csv_file dan tombol generate_csv -->
        <!-- <record id="view_mahasiswa_csv" model="ir.ui.view">
            <field name="name">mahasiswa.data.csv</field>
