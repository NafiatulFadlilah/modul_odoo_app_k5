        <!-- definisikan action untuk membuka view form baru untuk add_csv -->
        <record id="action_mahasiswa_add_csv" model="ir.actions.act_window">
            <field name="name">Tambah Data Mahasiswa dari CSV</field>
            <field name="res_model">mahasiswa.data</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_mahasiswa_add_csv"/>
        </record>
        <record id="action_mahasiswa_read_csv" model="ir.actions.act_window">
            <field name="name">Baca Data Mahasiswa dari CSV</field>
            <field name="res_model">mahasiswa.data</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_mahasiswa_read_csv"/>
        </record>

