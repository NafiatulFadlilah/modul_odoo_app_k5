        <!-- definisikan view form baru untuk menampilkan field file_csv dan tombol add_csv -->
        <record id="view_mahasiswa_add_csv" model="ir.ui.view">
            <field name="name">mahasiswa.data.add_csv</field>
            <field name="model">mahasiswa.data</field>
            <field name="arch" type="xml">
                <form string="Tambah Data Mahasiswa dari CSV">
                    <sheet>
                        <group>
                            <!-- tampilkan field file_csv dengan widget binary -->
                            <field name="file_csv" widget="binary" filename="mahasiswa.csv"/>
                        </group>
                        <footer>
                            <!-- tampilkan tombol untuk memanggil fungsi add_csv dengan widget button -->
                            <button name="add_csv" string="Tambah Data" type="object" class="btn-primary"/>
                            <button string="Close" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_mahasiswa_read_csv" model="ir.ui.view">
            <field name="name">mahasiswa.data.read_csv</field>
            <field name="model">mahasiswa.data</field>
            <field name="arch" type="xml">
                <form string="Baca Data Mahasiswa dari CSV">
                    <sheet>
                        <group>
                            <!-- tampilkan field file_path dengan widget char -->
                            <field name="file_csv" widget="binary" string="Lokasi File CSV"/>
                        </group>
                        <footer>
                            <!-- tampilkan tombol untuk memanggil fungsi read_csv dengan widget button -->
                            <button name="read_csv" string="Baca Data" type="object" class="btn-primary"/>
                            <button string="Close" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- definisikan action untuk membuka view tree dan view form -->
        <record id="action_mahasiswa" model="ir.actions.act_window">
            <field name="name">Data Mahasiswa</field>
            <field name="res_model">mahasiswa.data</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Klik tombol Buat untuk menambahkan data mahasiswa baru.
                </p>
            </field>
        </record>
        <!-- definisikan action untuk membuka view form baru untuk generate_csv -->
